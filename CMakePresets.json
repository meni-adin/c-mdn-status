{
    "version": 6,
    "configurePresets": [
        {
            "name": "config-common",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "config-debug",
            "inherits": ["config-common"],
            "description": "Debug build using safe version of the library",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "C_ERRORS_SAFE_MODE": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "config-release",
            "inherits": ["config-common"],
            "description": "Release build using non-safe version of the library",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "C_ERRORS_SAFE_MODE": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-debug",
            "configurePreset": "config-debug"
        },
        {
            "name": "build-release",
            "configurePreset": "config-release"
        }
    ],
    "testPresets": [
        {
            "name": "test-common",
            "hidden": true,
            "output": { "outputOnFailure": true },
            "execution": { "noTestsAction": "error" },
            "environment": {
                "GTEST_COLOR": "1"
            }
        },
        {
            "name": "test-debug",
            "configurePreset": "config-debug",
            "inherits": ["test-common"]
        },
        {
            "name": "test-release",
            "configurePreset": "config-release",
            "inherits": ["test-common"]
        }
    ]
}
